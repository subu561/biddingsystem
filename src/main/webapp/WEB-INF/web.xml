<web-app>

<servlet>
<servlet-name>welcome</servlet-name>
<servlet-class>DemoServ</servlet-class>
</servlet>
<servlet>
<servlet-name>user registration</servlet-name>
<servlet-class>RegisterServlet</servlet-class>
</servlet>
<servlet>
<servlet-name>user login</servlet-name>
<servlet-class>LoginServlet</servlet-class>
</servlet>
<servlet>
<servlet-name>registration submit</servlet-name>
<servlet-class>NewUserServlet</servlet-class>
</servlet>
<servlet>
<servlet-name>add car details</servlet-name>
<servlet-class>CarServlet</servlet-class>
</servlet>
<servlet>
<servlet-name>view car details</servlet-name>
<servlet-class>CarDetailsServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>welcome</servlet-name>
<url-pattern>/welcome</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>user registration</servlet-name>
<url-pattern>/register</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>user login</servlet-name>
<url-pattern>/login</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>registration submit</servlet-name>
<url-pattern>/submit</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>add car details</servlet-name>
<url-pattern>/car</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>view car details</servlet-name>
<url-pattern>/cardetails</url-pattern>
</servlet-mapping>
</web-app>